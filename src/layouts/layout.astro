---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { ViewTransitions } from "astro:transitions";

const { title = "Test", description = "Test" } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<ViewTransitions />
	</head>

	<body>
		<Header />
		<div
			style="display: flex; justify-content:center; align-items: center; flex-direction: column;"
		>
			<p class="">The Zendesk Chat widget should appear.</p>
			<p class="">If not, try hitting refresh.</p>
		</div>
		<Footer />
		<script
			id="ze-snippet"
			src="https://static.zdassets.com/ekr/snippet.js?key=c01cd239-29ef-41a1-b7f9-ca3ccdc587c2"
		></script>
	</body>
</html>
